{
  "name": "nas",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"cd frontend && vite\" \"concurrently --names \\\"TSC,NODE\\\" -c \\\"cyan,green\\\" \\\"cd backend && tsc -w --preserveWatchOutput\\\" \\\"cd backend && nodemon --delay 2 dist/index.js\\\"\"",
    "stop": "pkill -f \"vite|nodemon|tsc\" || true",
    "build": "cd backend && tsc && cd ../frontend && vite build"
  },
  "keywords": ["nas", "file-manager", "docker", "svelte", "express"],
  "author": "",
  "license": "ISC",
  "description": "Web-based NAS file management system with Docker deployment",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/unzipper": "^0.10.11",
    "adm-zip": "^0.5.16",
    "archiver": "^7.0.1",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "mkdirp": "^3.0.1",
    "monaco-editor": "^0.52.2",
    "unzipper": "^0.12.3",
    "uuid": "^11.1.0",
    "yauzl": "^3.2.0",
    "@monaco-editor/loader": "^1.5.0",
    "@zip.js/zip.js": "^2.7.57",
    "jszip": "^3.10.1",
    "sass": "^1.85.0"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/archiver": "^6.0.3",
    "@types/better-sqlite3": "^7.6.13",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/yauzl": "^2.10.3",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "typescript": "^5.9.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@tsconfig/svelte": "^5.0.4",
    "svelte": "^5.19.6",
    "svelte-check": "^4.1.4",
    "vite": "^6.1.0"
  }
}
